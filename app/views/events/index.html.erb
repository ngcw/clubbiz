<div class="event">

	<h1>Listing events</h1>
	
	<table>
	  <thead>
	    <tr>
	      <th>Name</th>
	      <th>Member</th>
	      <th>Date</th>
	      <th>Place</th>
	      <th>Price</th>
	      <th>Website</th>
	      <th>Imagepath</th>
	      <th>Bannerpath</th>
	      <th>Saleslocation</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @events.each do |event| %>
	      <tr>
	        <td><%= event.name %></td>
	        <td><%= event.memberOnly %></td>
	        <td><%= event.date.strftime('%m/%d/%Y') %></td>
	        <td><%= event.place %></td>
	        <td><%= event.price %></td>
	        <td><%= event.website %></td>
	        <td><%= event.imagePath %></td>
	        <td><%= event.bannerPath %></td>
	        <td><%= event.salesLocation %></td>
	        <td><%= link_to 'Show', event %></td>
	        <td><%= link_to 'Edit', edit_event_path(event) %></td>
	        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
	<br>
	
	<%= link_to 'New Event', new_event_path %>
</div>
