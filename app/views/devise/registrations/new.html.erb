<h2>Sign up</h2>

<div class="col-md-6 col-xs-12 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="input-group">
    <%= f.label :Email %> <br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="input-group">
    <%= f.label :Password %> <br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="input-group"><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>

  <div class="input-group"><%= f.label :first_name %> <i> (we need your first name to confirm your identify) </i><br />
    <%= f.text_field :first_name, autofocus: true %></div>

  <div class="input-group"><%= f.label :last_name %> <i> (we need your last name to confirm your identify) </i><br />
    <%= f.text_field :last_name, autofocus: true %></div>

  <div class="input-group"><%= f.label :phone_number %> <i> (we need your phone number to confirm your identify) </i><br />
    <%= f.text_field :phone_number, autofocus: true %></div>

  <div class="input-group">
    <%= f.label :SuperAdmin_Password %> <br />
    <%= f.password_field :superadmin_password, autocomplete: "off" %>
  </div>

  <div class="input-group" ><%= f.submit "Sign up" %></div>
<% end %>
</div>

